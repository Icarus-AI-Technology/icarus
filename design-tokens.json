{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "name": "OraclusX Design System",
  "version": "1.0.0",
  "description": "Sistema de Design para ICARUS v5.0 - ERP Médico-Hospitalar B2B",
  "lastUpdated": "2025-10-14",
  
  "colors": {
    "primary": {
      "base": "#6366F1",
      "hover": "#5558E3",
      "active": "#4346D9",
      "foreground": "#FFFFFF",
      "contrast": "8.59:1",
      "wcag": "AAA"
    },
    
    "secondary": {
      "light": "#10B981",
      "dark": "#34D399",
      "foreground": "#FFFFFF"
    },
    
    "neutral": {
      "light": {
        "background": "#F9FAFB",
        "neomorphic-bg": "#F0F4F8",
        "foreground": "#1F2937",
        "muted": "#64748b",
        "border": "rgba(0, 0, 0, 0.1)"
      },
      "dark": {
        "background": "#0F172A",
        "neomorphic-bg": "#1E293B",
        "foreground": "#F3F4F6",
        "muted": "#94a3b8",
        "border": "rgba(255, 255, 255, 0.1)"
      }
    },
    
    "semantic": {
      "success": {
        "light": "#10B981",
        "dark": "#34D399"
      },
      "warning": {
        "light": "#F59E0B",
        "dark": "#FBBF24"
      },
      "danger": {
        "light": "#EF4444",
        "dark": "#F87171"
      },
      "info": {
        "light": "#6366F1",
        "dark": "#818CF8"
      }
    },
    
    "charts": [
      "#6366F1",
      "#10B981",
      "#F59E0B",
      "#8B5CF6",
      "#EC4899"
    ],
    
    "neomorphic": {
      "variants": {
        "blue": {
          "light": "#DBEAFE",
          "dark": "#2563eb",
          "shadowLight": "#BFDBFE",
          "shadowDark": "#1e3a8a"
        },
        "indigo": {
          "light": "#E0E7FF",
          "dark": "#6366F1",
          "shadowLight": "#C7D2FE",
          "shadowDark": "#312e81"
        },
        "green": {
          "light": "#D1FAE5",
          "dark": "#059669",
          "shadowLight": "#A7F3D0",
          "shadowDark": "#14532d"
        }
      }
    }
  },
  
  "typography": {
    "fontFamily": {
      "base": "'Inter', system-ui, -apple-system, sans-serif",
      "fallback": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif"
    },
    
    "fontSize": {
      "xs": "12px",
      "sm": "14px",
      "md": "16px",
      "usage": {
        "xs": "Helper text, metadados, badges pequenos",
        "sm": "Texto padrão, labels, botões, inputs",
        "md": "Subtítulos, card titles, destaque"
      }
    },
    
    "fontWeight": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "usage": {
        "normal": "Texto corrido, parágrafos",
        "medium": "Labels, botões, navegação",
        "semibold": "Títulos, headings (máximo permitido)"
      }
    },
    
    "lineHeight": {
      "default": 1.5,
      "heading": 1.2,
      "tight": 1.25
    },
    
    "letterSpacing": {
      "normal": "0",
      "wide": "0.025em"
    }
  },
  
  "borderRadius": {
    "sm": "10px",
    "md": "16px",
    "lg": "20px",
    "full": "9999px",
    "usage": {
      "sm": "Botões, badges, inputs",
      "md": "Cards, sections (padrão)",
      "lg": "Modais, panels grandes",
      "full": "Circular: avatares, pills, FABs"
    }
  },
  
  "shadows": {
    "neomorphic": {
      "light": {
        "raised": [
          "-8px -8px 16px rgba(255, 255, 255, 0.9)",
          "8px 8px 16px rgba(203, 213, 225, 0.6)",
          "inset -2px -2px 4px rgba(255, 255, 255, 0.7)",
          "inset 2px 2px 4px rgba(0, 0, 0, 0.15)"
        ],
        "inset": [
          "inset 8px 8px 16px rgba(203, 213, 225, 0.7)",
          "inset -8px -8px 16px rgba(255, 255, 255, 0.5)",
          "-2px -2px 4px rgba(255, 255, 255, 0.5)",
          "2px 2px 4px rgba(0, 0, 0, 0.1)"
        ],
        "flat": [
          "-6px -6px 12px rgba(255, 255, 255, 0.9)",
          "6px 6px 12px rgba(203, 213, 225, 0.6)"
        ]
      },
      "dark": {
        "raised": [
          "-8px -8px 16px rgba(51, 65, 85, 0.5)",
          "8px 8px 16px rgba(0, 0, 0, 0.7)",
          "inset -2px -2px 4px rgba(255, 255, 255, 0.02)",
          "inset 2px 2px 4px rgba(0, 0, 0, 0.3)"
        ],
        "inset": [
          "inset 8px 8px 16px rgba(0, 0, 0, 0.8)",
          "inset -8px -8px 16px rgba(51, 65, 85, 0.4)",
          "-2px -2px 4px rgba(255, 255, 255, 0.02)",
          "2px 2px 4px rgba(0, 0, 0, 0.3)"
        ],
        "flat": [
          "-6px -6px 12px rgba(51, 65, 85, 0.5)",
          "6px 6px 12px rgba(0, 0, 0, 0.7)"
        ]
      }
    },
    
    "restrictions": {
      "allowed": [
        "SearchField (topbar)",
        "SidebarItem (navegação)"
      ],
      "forbidden": [
        "Containers/Cards",
        "Forms",
        "Modals",
        "Tables",
        "Panels"
      ],
      "replacement": "border: 1px solid var(--border)"
    }
  },
  
  "spacing": {
    "scale": {
      "xs": "4px",
      "sm": "8px",
      "md": "12px",
      "lg": "16px",
      "xl": "20px",
      "2xl": "24px",
      "3xl": "32px"
    },
    
    "gap": {
      "dense": "12px",
      "normal": "16px",
      "spacious": "20px",
      "usage": {
        "dense": "KPI grids, compact layouts",
        "normal": "Cards, forms, sections",
        "spacious": "Large panels, modals"
      }
    },
    
    "padding": {
      "compact": "16px",
      "normal": "20px",
      "spacious": "24px",
      "usage": {
        "compact": "KPI cards, badges",
        "normal": "Cards, sections",
        "spacious": "Forms, modals"
      }
    }
  },
  
  "layout": {
    "sidebar": {
      "width": "260px",
      "collapsed": "80px"
    },
    "topbar": {
      "height": "64px"
    },
    "container": {
      "maxWidth": "1400px"
    },
    "breakpoints": {
      "mobile": "640px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1280px"
    }
  },
  
  "components": {
    "button": {
      "height": {
        "sm": "36px",
        "md": "40px",
        "lg": "44px"
      },
      "minWidth": "44px",
      "padding": {
        "sm": "8px 16px",
        "md": "10px 20px",
        "lg": "12px 24px"
      },
      "borderRadius": "var(--radius-sm)",
      "fontSize": "var(--font-size-sm)",
      "fontWeight": "var(--font-weight-medium)"
    },
    
    "input": {
      "height": "44px",
      "minHeight": "44px",
      "padding": "12px 16px",
      "borderRadius": "var(--radius-sm)",
      "fontSize": "var(--font-size-sm)",
      "border": "1px solid var(--border)",
      "background": {
        "light": "#FFFFFF",
        "dark": "#1e293b"
      }
    },
    
    "card": {
      "borderRadius": "var(--radius-md)",
      "padding": "var(--padding-normal)",
      "border": "1px solid var(--border)",
      "background": "var(--surface)"
    },
    
    "kpiCard": {
      "minHeight": "140px",
      "maxHeight": "140px",
      "padding": "16px",
      "borderRadius": "var(--radius-md)",
      "gap": "12px"
    },
    
    "badge": {
      "height": "24px",
      "padding": "4px 12px",
      "borderRadius": "var(--radius-full)",
      "fontSize": "var(--font-size-xs)"
    },
    
    "modal": {
      "borderRadius": "var(--radius-lg)",
      "padding": "var(--padding-spacious)",
      "maxWidth": "720px"
    }
  },
  
  "icons": {
    "strokeWidth": "2px",
    "strokeLinecap": "round",
    "strokeLinejoin": "round",
    "fill": "none",
    "sizes": {
      "sm": "16px",
      "md": "20px",
      "lg": "24px",
      "xl": "32px"
    },
    "usage": {
      "rule": "SEMPRE outline (traços sem preenchimento)",
      "exception": "Nenhuma - 100% outline no sistema"
    }
  },
  
  "rules": {
    "universal": {
      "name": "Background Indigo = Texto Branco",
      "description": "Qualquer elemento com background #6366F1 DEVE ter texto #FFFFFF",
      "contrast": "8.59:1 (WCAG AAA)",
      "applies": [
        "Texto (span, p, div, h1-h6)",
        "Ícones SVG (stroke branco, fill none)",
        "Badges",
        "Links",
        "Placeholders"
      ]
    },
    
    "typography": {
      "fontSizes": "Apenas 3 permitidos: 12px, 14px, 16px",
      "fontWeights": "Apenas 3 permitidos: 400, 500, 600",
      "maxWeight": "600 (semibold) - NUNCA usar bold/700+"
    },
    
    "borderRadius": {
      "values": "Apenas 4 permitidos: 10px, 16px, 20px, 9999px",
      "forbidden": "Valores arbitrários como 8px, 12px, 15px, etc"
    },
    
    "shadows": {
      "containers": "PROIBIDO - usar border 1px",
      "allowed": "Apenas SearchField e SidebarItem",
      "replacement": "border: 1px solid var(--border) + focus ring"
    }
  },
  
  "accessibility": {
    "wcag": "2.1 AA mínimo, AAA preferencial",
    "contrast": {
      "text": {
        "normal": "4.5:1 mínimo",
        "large": "3:1 mínimo"
      },
      "indigo": "8.59:1 (AAA)"
    },
    "touchTargets": {
      "minimum": "44x44px",
      "standard": "WCAG AAA compliance"
    },
    "focusIndicators": "outline: 2px solid primary com offset: 2px"
  },
  
  "performance": {
    "animations": {
      "duration": {
        "fast": "150ms",
        "normal": "200ms",
        "slow": "300ms"
      },
      "easing": "cubic-bezier(0.4, 0, 0.2, 1)"
    },
    "reducedMotion": "Suporte obrigatório via @media (prefers-reduced-motion: reduce)"
  },
  
  "metadata": {
    "coverage": "100%",
    "modules": 58,
    "components": "38+",
    "tokens": "38 semânticos",
    "wcagLevel": "AA/AAA",
    "status": "Production Ready"
  }
}
